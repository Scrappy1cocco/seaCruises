include ../small_blocks/nav

mixin header
  header.header
    .header__top
      .container
        +navig('header__nav')
        .header__pannel
          a.header__pannel-personal(href='#')
            +svg('user','header__personal-icon', '')
            span.header__personal-text Личный кабинет
          a.header__pannel-currency
            +svg('ruble','header__currency-icon', '')
            span.header__currency-text Рубль
          a.header__pannel-lang
            span.header__lang-text Ru
          .header__pannel-support
            span.header__support-phone 8 800 500-61-05
            span.header__support-text Круглосуточная поддержка


    .header__main
      .container
        .header__logo
          img.header__logo-picture(src="static/img/icons/logo.png" width='70' height='70' alt='Логотип')
        .header__title.title
          span.title__prew Морские прогулки
          h1.title__main По черному морю
        a.header__btn.btn(href="#") Выбрать круиз
        .header__track
          img.header__track-image(src="static/img/icons/dashed.png")

    